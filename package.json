{
  "name": "spotisync",
  "version": "1.0.0",
  "private": true,
  "description": "Collaborative Spotify Jam-mode listening sessions",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd server && npm ci && cd ../client && npm ci && npm run build",
    "start": "cd server && npm start",
    "db:setup": "cd server && npm run db:setup"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
